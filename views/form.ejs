<form method="post" action="/support" enctype="application/x-www-form-urlencoded">
    <div class="form-group" style="margin-bottom: 10px">
        <label for="exampleInputEmail1">Địa chỉ Email</label>
        <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label >Thông tin cần hỗ trợ</label>
        <textarea name="content" class="form-control" id="exampleInputText" placeholder="Thông tin cần hỗ trợ" rows="4" style="margin-bottom: 10px"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
